<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/screenBackground2"
        tools:context=".SecondActivity">

    <TextView
            android:text="@string/random_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textview_label" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textColor="@color/colorPrimaryDark"/>
    <TextView
            android:text="R"
            android:layout_width="46dp"
            android:layout_height="wrap_content" android:id="@+id/textview_random"
            app:layout_constraintTop_toBottomOf="@+id/textview_label" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="6dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            android:textSize="72sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.45"
            android:textColor="@android:color/white"/>
</android.support.constraint.ConstraintLayout>